---
// Hero.astro - Sección principal del sitio con temática Ferxxo
import { Icon } from "astro-icon/components";
---

<section
  id="home"
  class="relative overflow-hidden bg-ferxxo-black min-h-screen flex items-center justify-center pt-20 pb-16"
>
  <!-- Efecto de fondo animado con CSS -->
  <div class="absolute inset-0 z-0 bg-gradient-radial"></div>

  <!-- Efectos de brillos neón -->
  <div class="absolute inset-0 z-0 neon-glow-effect"></div>

  <!-- Elementos decorativos de fondo -->
  <div class="absolute inset-0 z-0">
    <div
      class="absolute top-0 left-0 right-0 h-64 bg-gradient-to-b from-ferxxo-purple/20 to-transparent"
    >
    </div>
    <!-- Lluvia de píxeles -->
    <div class="absolute inset-0 overflow-hidden opacity-20">
      <div class="pixel-rain"></div>
    </div>

    <!-- Efectos de distorsión horizontal -->
    <div
      class="absolute top-1/4 left-0 right-0 h-px bg-ferxxo-pink/30 glitch-line"
    >
    </div>
    <div
      class="absolute top-1/3 left-0 right-0 h-px bg-ferxxo-blue/30 glitch-line delay-300"
    >
    </div>
    <div
      class="absolute top-1/2 left-0 right-0 h-px bg-ferxxo-purple/30 glitch-line delay-700"
    >
    </div>
    <div
      class="absolute top-2/3 left-0 right-0 h-px bg-ferxxo-green/30 glitch-line delay-1100"
    >
    </div>

    <!-- Elementos gráficos -->
    <div
      class="absolute -bottom-16 -left-16 w-64 h-64 rounded-full bg-ferxxo-pink/10 blur-3xl"
    >
    </div>
    <div
      class="absolute -top-16 -right-16 w-64 h-64 rounded-full bg-ferxxo-blue/10 blur-3xl"
    >
    </div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-6xl mx-auto">
      <div class="flex flex-col md:flex-row items-center gap-10">
        <!-- Contenido textual -->
        <div class="w-full md:w-1/2 mb-10 md:mb-0" data-aos="fade-right">
          <!-- Texto principal con efecto glitch -->
          <h1 class="text-5xl sm:text-7xl font-extrabold mb-4 leading-none">
            <span class="block text-4xl sm:text-6xl mt-2"> </span>
            <span
              class="block text-xl sm:text-3xl mt-4 glitch-effect-subtle"
              data-text="Desarrollador Full Stack"
            >
              <span class="text-ferxxo-pink text-shadow-neon-pink-subtle"
                >Desarrollador Full Stack</span
              >
            </span>
          </h1>

          <div
            class="h-1 w-32 bg-gradient-to-r from-ferxxo-pink to-ferxxo-purple mb-6"
          >
          </div>

          <p class="text-gray-300 text-lg mb-8 max-w-xl">
            ¡Hola! Soy Luis Ccalluchi López, desarrollador Full Stack con más de
            +3 años de experiencia construyendo productos digitales centrados en
            el usuario. He tenido la oportunidad de trabajar en proyectos
            internacionales colaborando con equipos de Perú, Argentina, México y
            Ecuador.
          </p>

          <!-- Botones de acción -->
          <div class="flex flex-wrap gap-4">
            <a href="#experience" class="group relative">
              <div
                class="absolute -inset-0.5 bg-gradient-to-r from-ferxxo-pink to-ferxxo-purple rounded-lg blur opacity-70 group-hover:opacity-100 transition duration-200"
              >
              </div>
              <button
                class="relative border border-ferxxo-pink bg-ferxxo-black px-6 py-3 rounded-lg text-white font-bold uppercase tracking-wider group-hover:text-ferxxo-pink transition duration-200"
              >
                Ver Experiencia
              </button>
            </a>

            <!--  <a
              href="#about"
              class="relative px-6 py-3 border border-ferxxo-blue/50 text-ferxxo-blue hover:text-white hover:bg-ferxxo-blue/20 rounded-lg font-bold uppercase tracking-wider transition duration-200"
            >
              Sobre Mi
            </a> -->
          </div>
        </div>

        <!-- Imagen/Gráfico con elementos Feid -->
        <div
          class="w-full md:w-1/2 relative"
          data-aos="fade-left"
          data-aos-delay="200"
        >
          <div class="aspect-square relative max-w-md mx-auto">
            <!-- Marco con borde distorsionado -->
            <div class="absolute inset-0 distortion-border rounded-2xl"></div>

            <!-- Contenedor del artwork -->
            <div
              class="absolute inset-2 bg-ferxxo-black rounded-2xl overflow-hidden flex items-center justify-center"
            >
              <!-- Elementos gráficos del artwork -->
              <div
                class="city-silhouette absolute bottom-0 left-0 right-0 h-32 bg-[url('data:image/svg+xml;base64,')]"
              >
              </div>

              <!-- Corazón roto neón -->
              <div
                class="absolute top-1/3 left-1/2 -translate-x-1/2 -translate-y-1/2 w-32 h-32"
              >
                <svg viewBox="0 0 100 100" class="w-full h-full">
                  <path
                    class="heart-path"
                    d="M50,80C40,60 10,40 10,25C10,10 20,5 30,5C40,5 50,10 50,20"
                    stroke="rgba(255,45,158,0.8)"
                    stroke-width="3"
                    fill="none"></path>
                  <path
                    class="heart-path"
                    d="M50,80C60,60 90,40 90,25C90,10 80,5 70,5C60,5 50,10 50,20"
                    stroke="rgba(255,45,158,0.8)"
                    stroke-width="3"
                    fill="none"></path>
                  <path
                    class="heart-break"
                    d="M50,30L60,20L50,40L40,30"
                    stroke="rgba(0,240,255,0.9)"
                    stroke-width="2"
                    fill="none"></path>
                </svg>
              </div>

              <!-- Texto FERXXO -->
              <div class="absolute bottom-10 w-full text-center">
                <span
                  class="inline-block ferxxo-logo text-4xl tracking-widest transform -rotate-2 text-shadow-neon-pink"
                >
                  FERXXO
                </span>
              </div>

              <!-- Micrófono -->
              <div class="absolute bottom-1/4 right-10 w-10 h-24">
                <div
                  class="w-10 h-10 rounded-full bg-gray-700 shadow-inner flex items-center justify-center"
                >
                  <div
                    class="w-6 h-6 rounded-full bg-gradient-to-br from-ferxxo-blue to-ferxxo-purple animate-pulse"
                  >
                  </div>
                </div>
                <div class="w-2 h-14 mx-auto bg-gray-700"></div>
              </div>

              <!-- Círculos decorativos -->
              <div
                class="absolute top-10 left-10 w-16 h-16 rounded-full border-2 border-ferxxo-green opacity-70"
              >
              </div>
              <div
                class="absolute top-14 left-14 w-8 h-8 rounded-full border border-ferxxo-pink opacity-70"
              >
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Iconos de redes sociales -->
      <div
        class="flex justify-center mt-10 gap-6"
        data-aos="fade-up"
        data-aos-delay="300"
      >
        <!--  <a
          href="#"
          class="w-10 h-10 rounded-full flex items-center justify-center border border-gray-700 hover:border-ferxxo-pink text-gray-400 hover:text-ferxxo-pink transition-colors duration-300"
        >
          <Icon name="simple-icons:twitter" class="h-5 w-5" />
        </a> -->
        <a
          href="#"
          class="w-10 h-10 rounded-full flex items-center justify-center border border-gray-700 hover:border-ferxxo-blue text-gray-400 hover:text-ferxxo-blue transition-colors duration-300"
        >
          <Icon name="simple-icons:instagram" class="h-5 w-5" />
        </a>
        <a
          href="#"
          class="w-10 h-10 rounded-full flex items-center justify-center border border-gray-700 hover:border-ferxxo-green text-gray-400 hover:text-ferxxo-green transition-colors duration-300"
        >
          <Icon name="simple-icons:github" class="h-5 w-5" />
        </a>
        <a
          href="#"
          class="w-10 h-10 rounded-full flex items-center justify-center border border-gray-700 hover:border-ferxxo-purple text-gray-400 hover:text-ferxxo-purple transition-colors duration-300"
        >
          <Icon name="simple-icons:linkedin" class="h-5 w-5" />
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .pixel-rain {
    position: absolute;
    top: -10%;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: radial-gradient(
        1px 1px at calc(100% * var(--x-1)) calc(100% * var(--y-1)),
        var(--ferxxo-pink),
        transparent
      ),
      radial-gradient(
        1px 1px at calc(100% * var(--x-2)) calc(100% * var(--y-2)),
        var(--ferxxo-blue),
        transparent
      ),
      radial-gradient(
        1px 1px at calc(100% * var(--x-3)) calc(100% * var(--y-3)),
        var(--ferxxo-purple),
        transparent
      ),
      radial-gradient(
        1px 1px at calc(100% * var(--x-4)) calc(100% * var(--y-4)),
        var(--ferxxo-green),
        transparent
      ),
      radial-gradient(
        1px 1px at calc(100% * var(--x-5)) calc(100% * var(--y-5)),
        var(--ferxxo-pink),
        transparent
      ),
      radial-gradient(
        1px 1px at calc(100% * var(--x-6)) calc(100% * var(--y-6)),
        var(--ferxxo-blue),
        transparent
      ),
      radial-gradient(
        1px 1px at calc(100% * var(--x-7)) calc(100% * var(--y-7)),
        var(--ferxxo-purple),
        transparent
      );
    background-size: 200% 200%;
    animation: rain 8s linear infinite;
  }

  /* Nuevos efectos de fondo */
  .bg-gradient-radial {
    background: radial-gradient(
      circle at 50% 50%,
      rgba(160, 32, 240, 0.1),
      rgba(255, 45, 158, 0.05),
      rgba(0, 240, 255, 0.07),
      transparent 70%
    );
    opacity: 0.7;
    animation: pulse-gradient 15s ease infinite;
  }

  .neon-glow-effect {
    position: absolute;
    pointer-events: none;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .neon-glow-effect::before,
  .neon-glow-effect::after {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    width: 40%;
    height: 40%;
    border-radius: 50%;
    filter: blur(60px);
    transform: translate(-50%, -50%);
    opacity: 0.1;
    animation: float 10s ease-in-out infinite alternate;
  }

  .neon-glow-effect::before {
    background: var(--ferxxo-pink);
    animation-delay: 0s;
  }

  .neon-glow-effect::after {
    background: var(--ferxxo-blue);
    animation-delay: -5s;
    animation-duration: 15s;
  }

  .distortion-border {
    border: 2px solid transparent;
    background: linear-gradient(
        90deg,
        var(--ferxxo-pink) 0%,
        var(--ferxxo-blue) 35%,
        var(--ferxxo-purple) 65%,
        var(--ferxxo-green) 100%
      )
      border-box;
    mask:
      linear-gradient(#fff 0 0) padding-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: destination-out;
    mask-composite: exclude;
    opacity: 0.8;
    animation: border-shift 8s linear infinite;
  }

  .glitch-line {
    opacity: 0;
    animation: glitch-line 4s infinite;
  }

  .delay-300 {
    animation-delay: 0.3s;
  }

  .delay-700 {
    animation-delay: 0.7s;
  }

  .delay-1100 {
    animation-delay: 1.1s;
  }

  .heart-path {
    opacity: 0.8;
    filter: drop-shadow(0 0 8px rgba(255, 45, 158, 0.8));
    animation: pulse 3s infinite;
  }

  .heart-break {
    opacity: 0;
    filter: drop-shadow(0 0 8px rgba(0, 240, 255, 0.8));
    animation: break-heart 3s infinite;
  }

  /* Efecto glitch para "Desarrollador Full Stack" */
  .text-shadow-neon-green {
    text-shadow:
      0 0 10px rgba(0, 255, 128, 0.8),
      0 0 20px rgba(0, 255, 128, 0.5);
  }

  .text-shadow-neon-pink {
    text-shadow:
      0 0 10px rgba(255, 45, 158, 0.8),
      0 0 20px rgba(255, 45, 158, 0.5);
  }

  .glitch-effect-alt {
    position: relative;
    display: inline-block;
    animation: glitch-animation 3s infinite;
  }

  .glitch-effect-alt::before,
  .glitch-effect-alt::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.8;
  }

  .glitch-effect-alt::before {
    animation: glitch-alt-1 0.8s infinite;
    color: #0ff;
    z-index: -1;
  }

  .glitch-effect-alt::after {
    animation: glitch-alt-2 1.2s infinite;
    color: #f0f;
    z-index: -2;
  }

  /* Animaciones para los nuevos efectos */
  @keyframes pulse-gradient {
    0%,
    100% {
      opacity: 0.6;
      transform: scale(1);
    }
    50% {
      opacity: 0.8;
      transform: scale(1.05);
    }
  }

  @keyframes float {
    0% {
      transform: translate(-50%, -50%) rotate(0deg) translateY(0);
    }
    50% {
      transform: translate(-60%, -40%) rotate(180deg) translateY(-20px);
    }
    100% {
      transform: translate(-40%, -60%) rotate(360deg) translateY(0);
    }
  }

  @keyframes border-shift {
    0% {
      background-position: 0% 50%;
    }
    100% {
      background-position: 100% 50%;
    }
  }

  @keyframes glitch-animation {
    0%,
    100% {
      transform: none;
      opacity: 1;
    }
    7% {
      transform: skew(-0.5deg, -0.9deg);
      opacity: 0.75;
    }
    10% {
      transform: none;
      opacity: 1;
    }
    27% {
      transform: none;
      opacity: 1;
    }
    30% {
      transform: skew(0.8deg, -0.1deg);
      opacity: 0.75;
    }
    35% {
      transform: none;
      opacity: 1;
    }
    52% {
      transform: none;
      opacity: 1;
    }
    55% {
      transform: skew(-1deg, 0.2deg);
      opacity: 0.75;
    }
    50% {
      transform: none;
      opacity: 1;
    }
    72% {
      transform: none;
      opacity: 1;
    }
    75% {
      transform: skew(0.4deg, 1deg);
      opacity: 0.75;
    }
    80% {
      transform: none;
      opacity: 1;
    }
    100% {
      transform: none;
      opacity: 1;
    }
  }

  @keyframes glitch-alt-1 {
    0% {
      transform: none;
      opacity: 0.25;
    }
    7% {
      transform: translate(-2px, -3px);
      opacity: 0.5;
    }
    10% {
      transform: none;
      opacity: 0.25;
    }
    27% {
      transform: none;
      opacity: 0.25;
    }
    30% {
      transform: translate(-5px, -2px);
      opacity: 0.5;
    }
    35% {
      transform: none;
      opacity: 0.25;
    }
    52% {
      transform: none;
      opacity: 0.25;
    }
    55% {
      transform: translate(-5px, -1px);
      opacity: 0.5;
    }
    50% {
      transform: none;
      opacity: 0.25;
    }
    72% {
      transform: none;
      opacity: 0.25;
    }
    75% {
      transform: translate(-2px, -6px);
      opacity: 0.5;
    }
    80% {
      transform: none;
      opacity: 0.25;
    }
    100% {
      transform: none;
      opacity: 0.25;
    }
  }

  @keyframes glitch-alt-2 {
    0% {
      transform: none;
      opacity: 0.25;
    }
    7% {
      transform: translate(2px, 3px);
      opacity: 0.5;
    }
    10% {
      transform: none;
      opacity: 0.25;
    }
    27% {
      transform: none;
      opacity: 0.25;
    }
    30% {
      transform: translate(5px, 2px);
      opacity: 0.5;
    }
    35% {
      transform: none;
      opacity: 0.25;
    }
    52% {
      transform: none;
      opacity: 0.25;
    }
    55% {
      transform: translate(5px, 1px);
      opacity: 0.5;
    }
    50% {
      transform: none;
      opacity: 0.25;
    }
    72% {
      transform: none;
      opacity: 0.25;
    }
    75% {
      transform: translate(2px, 6px);
      opacity: 0.5;
    }
    80% {
      transform: none;
      opacity: 0.25;
    }
    100% {
      transform: none;
      opacity: 0.25;
    }
  }

  @keyframes rain {
    0% {
      background-position: 0% 0%;
    }
    100% {
      background-position: 0% 100%;
    }
  }

  @keyframes glitch-line {
    0% {
      opacity: 0;
      transform: translateX(-100%);
    }
    10%,
    30% {
      opacity: 0.6;
    }
    50% {
      opacity: 0.3;
      transform: translateX(0);
    }
    70%,
    90% {
      opacity: 0.6;
    }
    100% {
      opacity: 0;
      transform: translateX(100%);
    }
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 0.6;
    }
    50% {
      opacity: 1;
    }
  }

  @keyframes break-heart {
    0%,
    20%,
    100% {
      opacity: 0;
    }
    50%,
    70% {
      opacity: 1;
    }
  }

  /* Efecto glitch sutil para "Desarrollador Full Stack" */
  .text-shadow-neon-pink-subtle {
    text-shadow:
      0 0 8px rgba(255, 45, 158, 0.6),
      0 0 12px rgba(255, 45, 158, 0.3);
  }

  .glitch-effect-subtle {
    position: relative;
    display: inline-block;
    animation: glitch-subtle 8s infinite;
  }

  .glitch-effect-subtle::before,
  .glitch-effect-subtle::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.5;
  }

  .glitch-effect-subtle::before {
    animation: glitch-subtle-1 4s infinite;
    color: rgba(255, 45, 158, 0.7);
    z-index: -1;
    clip-path: polygon(0 0, 100% 0, 100% 45%, 0 45%);
    transform: translate(-1px, 0);
  }

  .glitch-effect-subtle::after {
    animation: glitch-subtle-2 3s infinite;
    color: rgba(255, 45, 158, 0.7);
    z-index: -2;
    clip-path: polygon(0 60%, 100% 60%, 100% 100%, 0 100%);
    transform: translate(1px, 0);
  }

  @keyframes glitch-subtle {
    0%,
    100% {
      transform: none;
      opacity: 1;
    }
    99.9% {
      transform: none;
      opacity: 1;
    }
    10% {
      transform: skew(0.2deg, 0);
      opacity: 0.9;
    }
    30% {
      transform: none;
      opacity: 1;
    }
    40% {
      transform: skew(-0.1deg, 0);
      opacity: 0.9;
    }
    45% {
      transform: none;
      opacity: 1;
    }
    60% {
      transform: none;
      opacity: 1;
    }
    70% {
      transform: skew(0.3deg, 0);
      opacity: 0.9;
    }
    75% {
      transform: none;
      opacity: 1;
    }
  }

  @keyframes glitch-subtle-1 {
    0%,
    100% {
      transform: translate(-1px, 0);
      opacity: 0.3;
    }
    30% {
      transform: translate(-1.5px, 0);
      opacity: 0.4;
    }
    60% {
      transform: translate(-1px, 0);
      opacity: 0.3;
    }
    90% {
      transform: translate(-1.2px, 0);
      opacity: 0.4;
    }
  }

  @keyframes glitch-subtle-2 {
    0%,
    100% {
      transform: translate(1px, 0);
      opacity: 0.3;
    }
    30% {
      transform: translate(1.2px, 0);
      opacity: 0.4;
    }
    60% {
      transform: translate(1.5px, 0);
      opacity: 0.3;
    }
    80% {
      transform: translate(1px, 0);
      opacity: 0.4;
    }
  }
</style>

<script>
  // Script simplificado para manejar efectos CSS
  document.addEventListener("DOMContentLoaded", () => {
    console.log("Inicializando efectos CSS del Hero...");

    // Código para lluvia de píxeles - mantener esto del script original
    const root = document.documentElement;
    for (let i = 1; i <= 7; i++) {
      root.style.setProperty(`--x-${i}`, Math.random().toFixed(2));
      root.style.setProperty(`--y-${i}`, Math.random().toFixed(2));
    }

    // Efecto de distorsión en hover para el texto FERXXO
    const ferxxoLogo = document.querySelector(".ferxxo-logo");
    if (ferxxoLogo) {
      ferxxoLogo.addEventListener("mouseover", () => {
        ferxxoLogo.classList.add("glitch-effect");
        setTimeout(() => {
          ferxxoLogo.classList.remove("glitch-effect");
        }, 1000);
      });
    }

    // Efecto de movimiento 3D en el artwork
    const artworkContainer = document.querySelector(
      ".aspect-square"
    ) as HTMLElement;
    if (artworkContainer) {
      // Manejar movimiento 3D suave al mover el mouse
      document.addEventListener("mousemove", (e) => {
        const { clientX, clientY } = e;
        const xPercent = clientX / window.innerWidth - 0.5;
        const yPercent = clientY / window.innerHeight - 0.5;

        // Límite de rotación de -5 a 5 grados
        const rotateX = yPercent * -10;
        const rotateY = xPercent * 10;

        // Aplicar transformación con suavizado
        artworkContainer.style.transition = "transform 0.1s ease-out";
        artworkContainer.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
      });

      // Resetear posición cuando el mouse sale del área
      document.addEventListener("mouseleave", () => {
        artworkContainer.style.transition = "transform 0.5s ease-out";
        artworkContainer.style.transform =
          "perspective(1000px) rotateX(0) rotateY(0)";
      });
    }

    // Añadir movimiento de partículas en la imagen del artwork
    const addParticles = () => {
      const artwork = document.querySelector(
        ".absolute.inset-2"
      ) as HTMLElement;
      if (artwork) {
        // Crear contenedor de partículas
        const particlesContainer = document.createElement("div");
        particlesContainer.className =
          "absolute inset-0 overflow-hidden pointer-events-none z-10";

        // Añadir partículas
        for (let i = 0; i < 25; i++) {
          const particle = document.createElement("div");
          const size = Math.random() * 3 + 1;
          const x = Math.random() * 100;
          const y = Math.random() * 100;
          const duration = Math.random() * 20 + 10;
          const delay = Math.random() * 5;
          const color =
            i % 4 === 0
              ? "#FF2D9E"
              : i % 4 === 1
                ? "#00F0FF"
                : i % 4 === 2
                  ? "#A020F0"
                  : "#00FF7F";

          particle.style.cssText = `
            position: absolute;
            width: ${size}px;
            height: ${size}px;
            background: ${color};
            border-radius: 50%;
            opacity: 0.4;
            top: ${y}%;
            left: ${x}%;
            filter: blur(1px);
            box-shadow: 0 0 5px ${color};
            animation: float-particle ${duration}s infinite ease-in-out ${delay}s;
          `;

          particlesContainer.appendChild(particle);
        }

        // Añadir estilo para animación de partículas
        const style = document.createElement("style");
        style.textContent = `
          @keyframes float-particle {
            0%, 100% {
              transform: translateY(0) translateX(0);
              opacity: 0.2;
            }
            25% {
              transform: translateY(-20px) translateX(10px);
              opacity: 0.5;
            }
            50% {
              transform: translateY(-30px) translateX(-10px);
              opacity: 0.3;
            }
            75% {
              transform: translateY(-10px) translateX(5px);
              opacity: 0.4;
            }
          }
        `;
        document.head.appendChild(style);

        // Añadir partículas al artwork
        artwork.appendChild(particlesContainer);
      }
    };

    // Iniciar efecto de partículas
    addParticles();
  });
</script>
