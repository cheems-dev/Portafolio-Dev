---

<section id="experience" class="py-20 bg-ferxxo-black relative overflow-hidden">
  <!-- Barra lateral de redes sociales (sticky) -->
  <div class="fixed left-0 top-1/2 transform -translate-y-1/2 z-50 hidden md:block">
    <div class="social-sidebar bg-ferxxo-black/80 backdrop-blur-sm p-3 rounded-r-xl border-r border-t border-b border-ferxxo-pink/30">
      <ul class="flex flex-col gap-4">
        {socialLinks.map((social) => (
          <li>
            <a 
              href={social.url} 
              target="_blank" 
              rel="noopener noreferrer"
              class="social-icon-link block p-2 rounded-full bg-ferxxo-black/50 border border-ferxxo-blue/20 hover:border-ferxxo-pink transition-all duration-300 hover:scale-110 hover:rotate-6"
              aria-label={`Visitar ${social.name}`}
            >
              <Icon name={social.icon} class="w-5 h-5 text-ferxxo-blue social-icon-glow" />
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>

  <!-- Barra de redes sociales móvil (bottom) -->
  <div class="fixed bottom-0 left-0 right-0 z-50 md:hidden">
    <div class="social-mobile bg-ferxxo-black/90 backdrop-blur-md p-2 border-t border-ferxxo-pink/30">
      <ul class="flex justify-center gap-6">
        {socialLinks.map((social) => (
          <li>
            <a 
              href={social.url} 
              target="_blank" 
              rel="noopener noreferrer"
              class="social-icon-link block p-2 rounded-full bg-ferxxo-black/50 border border-ferxxo-blue/20 hover:border-ferxxo-pink transition-all duration-300"
              aria-label={`Visitar ${social.name}`}
            >
              <Icon name={social.icon} class="w-5 h-5 text-ferxxo-blue social-icon-glow" />
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>

  <!-- Elementos decorativos de fondo -->
  <div class="absolute inset-0 z-0 opacity-15 pointer-events-none">
    <!-- Gradiente diagonal -->
    <div class="absolute top-0 left-0 right-0 h-64 bg-gradient-to-br from-ferxxo-purple/20 via-transparent to-transparent"></div>
    
    <!-- Grid futurista -->
    <div class="absolute inset-0 grid grid-cols-6 md:grid-cols-12">
      {Array.from({ length: 12 }).map(() => (
        <div class="border-r border-ferxxo-blue/5"></div>
      ))}
    </div>
    
    <!-- Líneas horizontales -->
    <div class="absolute top-1/2 left-0 w-full h-px bg-gradient-to-r from-transparent via-ferxxo-pink/10 to-transparent"></div>
    
    <!-- Círculos decorativos -->
    <div class="absolute bottom-0 left-0 w-96 h-96 rounded-full bg-ferxxo-blue/5 blur-3xl opacity-30"></div>
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <!-- Encabezado de sección -->
    <div class="text-center mb-12 md:mb-16">
      <h2 
        class="text-4xl md:text-5xl font-bold mb-4 uppercase text-white"
        data-aos="fade-up"
      >
        Mi <span class="text-ferxxo-pink ferxxo-glow">Experiencia</span>
      </h2>
      <div 
        class="w-32 h-1 bg-gradient-to-r from-ferxxo-pink via-ferxxo-purple to-ferxxo-blue mx-auto"
        data-aos="zoom-in"
        data-aos-delay="200"
      ></div>
      <p 
        class="mt-6 max-w-2xl mx-auto text-gray-300 md:text-lg"
        data-aos="fade-up"
        data-aos-delay="300"
      >
        Mi trayectoria profesional y proyectos destacados que he desarrollado durante mi carrera.
      </p>
    </div>
    
    <!-- Timeline de experiencia con proyectos -->
    <div class="max-w-6xl mx-auto">
      {experiences.map((experience, index) => (
        <div class="mb-16 md:mb-24 ferxxo-fade-in" data-aos="fade-up" data-aos-delay={index * 150}>
          <div class="relative">
            <!-- Línea temporal (visible en tablets y desktop) -->
            <div class="hidden sm:block absolute left-16 md:left-1/3 top-0 bottom-0 w-0.5 bg-gradient-to-b from-ferxxo-blue via-ferxxo-purple to-ferxxo-pink opacity-30"></div>
            
            <!-- Contenido de la experiencia con proyectos -->
            <div class="flex flex-col sm:flex-row gap-8">
              <!-- Información de la empresa -->
              <div class="w-full sm:w-56 md:w-1/3 relative">
                <!-- Marcador de timeline (visible en tablets y desktop) -->
                <div class="hidden sm:flex absolute right-0 top-6 w-8 h-8 -translate-x-[calc(50%-0.125rem)] transform z-10 items-center justify-center">
                  <span class="w-3 h-3 rounded-full bg-ferxxo-blue absolute"></span>
                  <span class="w-5 h-5 rounded-full bg-ferxxo-blue/30 absolute animate-ping"></span>
                </div>
                
                <div class="bg-ferxxo-black/70 backdrop-blur-sm p-6 rounded-xl border border-ferxxo-blue/20 hover:border-ferxxo-blue/40 transition-all duration-300 h-full hover:shadow-[0_0_15px_rgba(0,240,255,0.15)]">
                  <span class="inline-block px-3 py-1 text-sm font-semibold bg-ferxxo-pink/10 text-ferxxo-pink rounded-full mb-3 border border-ferxxo-pink/30">
                    {experience.period}
                  </span>
                  <h3 class="text-xl md:text-2xl font-bold text-white mb-2">
                    {experience.position}
                  </h3>
                  <h4 class="text-lg font-medium text-ferxxo-blue mb-4">
                    {experience.company}
                  </h4>
                  <p class="text-gray-300 text-sm md:text-base mb-4">
                    {experience.description}
                  </p>
                </div>
              </div>
              
              <!-- Proyectos de esta experiencia -->
              <div class="w-full sm:flex-1 md:w-2/3 pl-0 sm:pl-12 md:pl-6">
                <h4 class="text-lg md:text-xl font-bold text-white mb-6 flex items-center">
                  <span class="inline-block w-5 h-0.5 bg-ferxxo-pink mr-3"></span>
                  Proyectos Destacados
                </h4>
                
                <div class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 gap-6">
                  {experience.projects.map((project) => (
                    <div class="project-card group bg-ferxxo-black/60 backdrop-blur-sm rounded-xl overflow-hidden border border-ferxxo-blue/20 hover:border-ferxxo-blue/50 transition-all duration-300 hover:shadow-[0_0_20px_rgba(0,240,255,0.2)]">
                      <!-- Imagen del proyecto -->
                      <div class="relative h-48 bg-gradient-to-br from-ferxxo-black to-ferxxo-black/80 overflow-hidden">
                        <!-- Líneas de cuadrícula para efecto tecnológico -->
                        <div class="absolute inset-0 grid grid-cols-8 opacity-10">
                          {Array.from({ length: 8 }).map(() => (
                            <div class="border-r border-ferxxo-blue/50"></div>
                          ))}
                        </div>
                        <div class="absolute inset-0 grid grid-rows-8 opacity-10">
                          {Array.from({ length: 8 }).map(() => (
                            <div class="border-b border-ferxxo-blue/50"></div>
                          ))}
                        </div>
                        
                        <!-- Capa de fondo oscuro para mejorar contraste -->
                        <div class="absolute inset-0 bg-ferxxo-black/60 z-10"></div>
                        
                        <!-- Imagen del proyecto - ahora usando la Variable de la imagen importada -->
                        <img 
                          src={project.image.src} 
                          alt={project.name}
                          width={project.image.width}
                          height={project.image.height}
                          class="absolute inset-0 w-full h-full object-cover opacity-40 group-hover:opacity-60 transition-opacity duration-300"
                          loading="lazy"
                          decoding="async"
                        />
                        
                        <!-- Nombre del proyecto con mejor contraste -->
                        <div class="absolute inset-0 flex items-center justify-center p-6 z-20">
                          <span class="text-2xl text-ferxxo-blue font-bold project-title">
                            {project.name.split(' ')[0]}
                          </span>
                        </div>
                        
                        <!-- Overlay con información - Mejorado para mayor legibilidad -->
                        <div class="absolute inset-0 bg-gradient-to-t from-ferxxo-black via-ferxxo-black/80 to-ferxxo-black/40 flex flex-col justify-end p-6 z-30 opacity-0 group-hover:opacity-100 transition-all duration-300 transform translate-y-2 group-hover:translate-y-0">
                          <div class="ferxxo-neon-card backdrop-blur-sm p-3 rounded-lg border border-ferxxo-pink/50 bg-ferxxo-black/40">
                            <div class="neon-glow-bg"></div>
                            <h5 class="text-lg md:text-xl font-bold text-white mb-2 text-shadow ferxxo-neon-text">{project.name}</h5>
                            <p class="text-sm md:text-base text-gray-200 text-shadow-sm">{project.description}</p>
                            <div class="mt-2 flex items-center">
                              <Icon name="mdi:link-variant" class="w-4 h-4 text-ferxxo-pink" />
                              <a href={project.link} target="_blank" rel="noopener noreferrer" class="ml-1 text-xs text-ferxxo-blue hover:text-ferxxo-pink transition-colors">Ver proyecto</a>
                            </div>
                          </div>
                        </div>
                      </div>
                      
                      <!-- Tecnologías usadas -->
                      <div class="p-4 md:p-5">
                        <div class="flex flex-wrap gap-2">
                          {project.technologies.map((tech) => (
                            <span class="inline-block px-2 py-1 text-xs bg-ferxxo-blue/10 text-ferxxo-blue rounded-full border border-ferxxo-blue/30">
                              {tech}
                            </span>
                          ))}
                        </div>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .ferxxo-glow {
    position: relative;
    text-shadow: 0 0 10px currentColor;
  }
  
  @keyframes neon-flicker {
    0%, 100% { opacity: 1; }
    41.99% { opacity: 1; }
    42% { opacity: 0.8; }
    43% { opacity: 1; }
    47% { opacity: 1; }
    47.1% { opacity: 0.9; }
    47.2% { opacity: 1; }
    60.99% { opacity: 1; }
    61% { opacity: 0.8; }
    61.5% { opacity: 1; }
  }
  
  .project-card {
    transform: translateY(0);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }
  
  .project-card:hover {
    transform: translateY(-8px);
  }
  
  .project-title {
    text-shadow: 0 0 10px rgba(0, 240, 255, 0.7), 0 0 20px rgba(0, 240, 255, 0.5);
    animation: pulse 2s infinite;
  }
  
  .text-shadow {
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.8);
  }
  
  .text-shadow-sm {
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.8);
  }
  
  .ferxxo-neon-card {
    position: relative;
    overflow: hidden;
    box-shadow: 0 0 15px rgba(255, 0, 128, 0.3);
  }
  
  .ferxxo-neon-text {
    color: rgba(255, 255, 255, 0.95);
    text-shadow: 
      0 0 5px #ff00ff,
      0 0 10px #ff00ff,
      0 0 20px #ff00ff;
    animation: neon-text-pulse 2s infinite alternate;
  }
  
  .neon-glow-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(255, 0, 128, 0.1), rgba(80, 0, 255, 0.1));
    opacity: 0.5;
    z-index: -1;
    filter: blur(8px);
    animation: glow-pulse 3s infinite alternate;
  }
  
  .social-icon-glow {
    filter: drop-shadow(0 0 2px currentColor);
    transition: all 0.3s;
  }
  
  .social-icon-link:hover .social-icon-glow {
    filter: drop-shadow(0 0 5px #ff00ff);
    color: #ff00ff;
  }
  
  .social-sidebar {
    box-shadow: 4px 0 15px rgba(255, 0, 128, 0.2);
    animation: sidebar-glow 4s infinite alternate;
  }
  
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.8; }
  }
  
  @keyframes neon-text-pulse {
    0% { text-shadow: 0 0 5px #ff00ff, 0 0 10px #ff00ff, 0 0 20px #ff00ff; }
    100% { text-shadow: 0 0 2px #ff00ff, 0 0 5px #ff00ff, 0 0 10px #ff00ff; }
  }
  
  @keyframes glow-pulse {
    0% { opacity: 0.3; filter: blur(8px); }
    100% { opacity: 0.7; filter: blur(12px); }
  }
  
  @keyframes sidebar-glow {
    0% { box-shadow: 4px 0 15px rgba(255, 0, 128, 0.2); }
    50% { box-shadow: 4px 0 15px rgba(0, 240, 255, 0.2); }
    100% { box-shadow: 4px 0 15px rgba(255, 0, 128, 0.2); }
  }
  
  @media (max-width: 640px) {
    .project-card:hover {
      transform: translateY(-5px);
    }
  }
</style> 