    <!-- Botón cerrar -->
    <button 
      onclick="closeImageModal()" 
      class="absolute top-4 right-4 z-10 w-10 h-10 rounded-full bg-ferxxo-black/80 border border-ferxxo-pink/40 flex items-center justify-center text-ferxxo-pink hover:bg-ferxxo-pink/20 hover:shadow-[0_0_15px_rgba(255,45,158,0.5)] transition-all duration-300"
    >
      <Icon name="mdi:close" class="w-6 h-6" />
    </button>
    
    <!-- Imagen ampliada -->
    <img 
      id="enlargedImage" 
      src="" 
      alt="" 
      class="max-w-full max-h-full object-contain rounded-xl border border-ferxxo-pink/30 shadow-[0_0_40px_rgba(255,45,158,0.3)]"
    />
  </div>
</div>

<style>
  .ferxxo-glow {
    position: relative;
    text-shadow: 0 0 10px currentColor;
  }
  
  @keyframes neon-flicker {
    0%, 100% { opacity: 1; }
    41.99% { opacity: 1; }
    42% { opacity: 0.8; }
    43% { opacity: 1; }
    47% { opacity: 1; }
    47.1% { opacity: 0.9; }
    47.2% { opacity: 1; }
    60.99% { opacity: 1; }
    61% { opacity: 0.8; }
    61.5% { opacity: 1; }
  }
  
  .project-card {
    position: relative;
    z-index: 1 !important;
  }
  
  /* Asegurar jerarquía correcta de z-index */
  .social-sidebar {
    z-index: 9999 !important;
  }
  
  .social-mobile {
    z-index: 50 !important;
  }
  
  .project-title {
    text-shadow: 0 0 10px rgba(0, 240, 255, 0.7), 0 0 20px rgba(0, 240, 255, 0.5);
    animation: pulse 2s infinite;
  }
  
  .text-shadow {
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.8);
  }
  
  .text-shadow-sm {
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.8);
  }
  
  .ferxxo-neon-card {
    position: relative;
    overflow: hidden;
    box-shadow: 0 0 15px rgba(255, 0, 128, 0.3);
  }
  
  .ferxxo-neon-text {
    color: rgba(255, 255, 255, 0.95);
    text-shadow: 
      0 0 5px #ff00ff,
      0 0 10px #ff00ff,
      0 0 20px #ff00ff;
    animation: neon-text-pulse 2s infinite alternate;
  }
  
  .neon-glow-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(255, 0, 128, 0.1), rgba(80, 0, 255, 0.1));
    opacity: 0.5;
    z-index: -1;
    filter: blur(8px);
    animation: glow-pulse 3s infinite alternate;
  }
  
  .social-icon-glow {
    filter: drop-shadow(0 0 2px currentColor);
